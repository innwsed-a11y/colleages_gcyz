<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".PublishItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发布物品"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/school_green_dark" />

        <!-- 物品图片 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@android:drawable/ic_menu_camera"
                android:scaleType="centerCrop"
                android:background="#f0f0f0"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/iv_item_image"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_take_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拍照"
                    android:layout_marginRight="16dp"
                    android:backgroundTint="@color/school_green_light"
                    android:textColor="@color/school_white" />

                <Button
                    android:id="@+id/btn_choose_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="从相册选择"
                    android:backgroundTint="@color/school_green_light"
                    android:textColor="@color/school_white" />
            </LinearLayout>
        </RelativeLayout>

        <!-- 物品名称 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物品名称"
                android:textColor="@color/school_green_dark" />

            <EditText
                android:id="@+id/et_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入物品名称"
                android:inputType="text" />
        </LinearLayout>

        <!-- 物品价格 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物品价格"
                android:textColor="@color/school_green_dark" />

            <EditText
                android:id="@+id/et_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入物品价格"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- 物品描述 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物品描述"
                android:textColor="@color/school_green_dark" />

            <EditText
                android:id="@+id/et_item_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="请输入物品描述"
                android:inputType="textMultiLine"
                android:gravity="top" />
        </LinearLayout>

        <!-- 商品分类 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品分类"
                android:textColor="@color/school_green_dark" />

            <Spinner
                android:id="@+id/sp_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- 新旧程度 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新旧程度"
                android:textColor="@color/school_green_dark" />

            <Spinner
                android:id="@+id/sp_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- 所在校区 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在校区"
                android:textColor="@color/school_green_dark" />

            <Spinner
                android:id="@+id/sp_campus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- 特色标签 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特色标签"
                android:textColor="@color/school_green_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" >

                <CheckBox
                    android:id="@+id/cb_free_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包邮" />

                <CheckBox
                    android:id="@+id/cb_negotiable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可议价" />

                <CheckBox
                    android:id="@+id/cb_urgent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="急售" />

                <CheckBox
                    android:id="@+id/cb_self_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仅自提" />
            </LinearLayout>
        </LinearLayout>

        <!-- 发布日期 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布日期"
                android:textColor="@color/school_green_dark" />

            <Button
                android:id="@+id/btn_select_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择日期"
                android:backgroundTint="@color/school_green_light"
                android:textColor="@color/school_white" />

            <TextView
                android:id="@+id/tv_selected_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未选择日期"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- 卖家信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖家姓名"
                android:textColor="@color/school_green_dark" />

            <EditText
                android:id="@+id/et_seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入卖家姓名"
                android:inputType="text" />
        </LinearLayout>

        <!-- 联系方式 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:textColor="@color/school_green_dark" />

            <EditText
                android:id="@+id/et_contact_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入联系方式（手机号/QQ）"
                android:inputType="text" />

            <CheckBox
                android:id="@+id/cb_remember_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住我的信息"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_marginRight="16dp"
                android:backgroundTint="@color/school_green_light"
                android:textColor="@color/school_white" />

            <Button
                android:id="@+id/btn_publish"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="发布"
                android:backgroundTint="@color/school_green_dark"
                android:textColor="@color/school_white" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>